<?xml version="1.0"?>
<launch>
  <arg name="domain" default="$(optenv ROBOT_DOMAIN_CONFIG atemr)"/>
  <arg name="config_package" default="$(optenv ROBOT_LOCALIZATION_CONFIG_PACKAGE atemr_localization)"/>
	<arg name="maps_folder" default="maps"/>
	<arg name="maps_path" default="$(eval find(config_package) + '/' + maps_folder)"/>
	<arg name="map_name" default="blank"/>
	<arg name="map_file" default="$(arg map_name)/$(arg map_name).yaml"/>

  <!-- Run the map server (server)-->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg maps_path)/$(arg map_file)">
	  <param name="frame_id" value="$(arg global_frame)"/>
		<remap from="map" to="$(arg map_topic)"/>
	</node>

</launch>
