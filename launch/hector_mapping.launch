<launch>
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping_node" output="screen">
    <!--remap from="scan" to="scan_filtered"/-->
    <param name="map_size" value="1024"/>
    <param name="map_frame" value="map"/>
    <param name="base_frame" value="base_footprint"/>
    <param name="laser_min_dist" value="0.35"/>
    <param name="laser_max_dist" value="12.0" />
    <param name="map_update_angle_thresh" value="0.6" />
    <param name="map_update_distance_thresh" value="0.4" />
    <param name="pub_map_odom_transform" value="false" />
    <param name="pub_odometry" value="true" />
    <param name="scan_subscriber_queue_size" value="5.0" />
    <remap from="map" to="h_map"/>
  </node>


</launch>
