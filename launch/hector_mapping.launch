<launch>
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping_node" output="screen">
    <remap from="scan" to="scan_filtered"/>
    <param name="map_size" value="800"/>
    <param name="map_frame" value="map"/>
    <param name="base_frame" value="base_footprint"/>
    <param name="laser_min_dist" value="0.25"/>
    <param name="laser_max_dist" value="12.0" />
    <param name="map_update_angle_thresh" value="0.5" />
    <param name="map_update_distance_thresh" value="0.3" />
  </node>


</launch>
